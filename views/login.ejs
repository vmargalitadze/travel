<%- include('./part/head.ejs') %>

<body>
  <%- include('./part/nav.ejs') %>

  <section class="vh-100">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-black">
          
          <div class="d-flex flex-column justify-content-center align-items-center text-center h-custom-2 px-5 ms-xl-4   pt-xl-0 mt-xl-n5">
            <% if (errorMessage) { %>
              <div class="user-message user-message--error">
                <%= errorMessage %>
              </div>
            <% } %>
            <form class="lg" action="/login" method="POST" style="width: 23rem;">
              <div class="form-outline mb-4">
                <input placeholder="Email" type="email" name="email" id="email" class="form-control">
              </div>
  
              <div class="form-outline mb-4">
                <input placeholder="Password" type="password" name="password" id="password" class="form-control">
              </div>
  
              <div class="pt-1 mb-4">
                <button class="btn button button-secondary btn-block" type="submit">Login</button>
              </div>
  
              <a class="btn button btn-primary btn-block" href="/reset">Reset Password</a>
            </form>
          </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
            alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
        </div>
      </div>
    </div>
  </section>
  

  <%- include('./part/script.ejs') %>
</body>