<%- include('./part/head.ejs') %>
<body>
  <%- include('./part/nav.ejs') %>
  <main>
    <div style="background-image: url('/img/tours/photo-1565067703613-c64e364c204f.jpg');" class="containera text-white">
      <!-- <h1 style="letter-spacing: 3px;">Work Travel Save Repeat.</h1> -->
      <h1 style="letter-spacing: 3px;"> Work </h1>
      <h1 style="letter-spacing: 3px;"> Travel </h1>
      <h1 style="letter-spacing: 3px;"> Save </h1>
      <h1 style="letter-spacing: 3px;"> Repeat</h1>
  </div>

  <div class="blank1"></div>

    <section class="section section-sm section-first bg-default">
      <div class="container">
        <div class="row row-50 justify-content-center">
          <div class="col-md-6 col-lg-7">
            <div class="row row-30 row-lg-40" data-lightgallery="group">
              <div class="col-12">
                <div class="oh-desktop">
                  <!-- Thumbnail Joan-->
                  <article class="thumbnail thumbnail-joan  slideInRight" style="margin-bottom: 100px;  visibility: visible; animation-name: slideInRight;">
                    <img src="/<%= travel.images[0] %>" alt="" class="header__hero-img">
                   
                  </article>
                </div>
              </div>
              <div class="col-12">
                <div class="oh-desktop">
                  <!-- Thumbnail Joan-->
                  <article class="thumbnail thumbnail-joan" style="margin-bottom: 100px;">
                    <img src="/<%= travel.images[1] %>" alt="" class="header__hero-img">
                  </article>
                </div>
              </div>
              <div class="col-12">
                <div class="oh-desktop">
              
                  <article class="thumbnail thumbnail-joan slideInRight" style="margin-bottom: 100px;  visibility: visible; animation-name: slideInRight;"><img src="/<%= travel.images[2] %>" alt="" class="header__hero-img">
                   
                  </article>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-5 position-relative">
            <div class="single-project single-project-4">
              <div class="single-tour-title">
                <h4 class="title-decoration-lines-bottom"><%= travel.name %><span></span></h4>
                
              </div>
              <div class="single-tour-price">
                <div class="product-big-price-wrap">
                  <span class="product-big-price">
                    <% if (travel.discount > 0) { %>
                      $<%= (travel.discount / 100) * travel.price %>
                    <% } else { %>
                      $<%= travel.price %>
                    <% } %>
                  </span>
                </div>
                
              </div>
              <p style="padding: 0px 0px 0px !important;" class="text-gray-500"><%= travel.description %></p>
              
              <div class="divider divider-30"></div>
              <ul class="list list-description d-inline-block d-md-block">
                <li><span>Country:</span><span style="margin-left: 5px;"><%= travel.location %></span></li>
                <li><span>Difficulty:</span><span style="margin-left: 5px;text-transform: capitalize;"><%= travel.difficulty %></span></li>
                <li><span>Duration:</span><span style="margin-left: 5px;"><%= travel.duration %> Days </span></li>
            
                <li><span>Category:</span><span style="margin-left: 5px;"><%= travel.category %></span></li>
              </ul>
              <div class="divider divider-30"></div>
            
              
              <div class="d-flex flex-row">
                
                
                
                <% if (travel.maxGroupSize > travel.peopleSize) { %>
                  <form action="/cart" method="post">
                    <button id="addToCartBtn" class="btn button button-secondary" type="submit">Add to Cart</button>
                    <input type="hidden" name="productId" value="<%= travel._id %>">
                  </form>
                <% } else { %>
                  <div class="">
                    <div class="">
                      <button disabled class="btn button button-secondary">No More Place</button>
                    </div>
                  </div>
                <% } %>
                
                            </div>


                            <% if (isAdmin) { %>
                             
                            <form action="/travel/delete-tour" class="mb-3 mt-3" method="POST">
                              <input type="hidden" name="travelId" value="<%= travel._id %>">
                              <button  class="btn button button-secondary" type="submit">Delete</button>
                            </form>
                            <div class="card__actions">
                              <a   href="/edit-product/<%= travel._id %>?edit=true" class="btn button button-secondary">Edit</a>
                             
                            
                            </div>
                            <% } %>

              </div>
        
        
            
            </div>
          </div>
        </div>
      </div>
     
    </section>
  </main>

     

 


  <%- include('./part/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
</body>